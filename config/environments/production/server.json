{
  "host": "0.0.0.0",
  "port": "${PORT || 1337}",
  "production": true,
  "proxy": {
    "enabled": false
  },
  "url": "${STRAPI_URL}",
  "admin": {
    "autoOpen": false
  },
  "cron": {
    "enabled": false
  },
  "database": {
    "client": "postgres",
    "host": "${PGHOST}",
    "port": "${PGPORT || 5432}",
    "database": "${PGDATABASE}",
    "username": "${PGUSER}",
    "password": "${PGPASSWORD}",
    "ssl": "${DATABASE_SSL || true}"
  },
  "middlewares": {
    "settings": {
      "cors": {
        "enabled": true
      }
    }
  }
}
