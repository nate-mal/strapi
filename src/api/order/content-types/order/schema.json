{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "string",
      "required": true
    },
    "stripeId": {
      "type": "string"
    },
    "products": {
      "type": "json",
      "required": true
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "online",
        "cashondelivery"
      ],
      "required": true
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid"
      ],
      "default": "unpaid",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "processing",
        "confirmed",
        "ordered_supplier",
        "handed_curier",
        "delivered",
        "canceled",
        "abandoned"
      ],
      "required": false,
      "default": "processing"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "payment_name": {
      "type": "string",
      "required": true
    },
    "payment_address": {
      "type": "text",
      "required": true
    },
    "checkout_session": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "products_populate": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    }
  }
}
